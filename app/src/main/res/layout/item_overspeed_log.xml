<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="#FFF5E0"> <ImageView
        android:id="@+id/iconAlert"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_overspeed_notification"
        android:contentDescription="Alert Icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/textCarId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="รถคันที่: CAR_001"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#E91E63"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/iconAlert"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textTime"/>

        <TextView
            android:id="@+id/textSpeed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ความเร็ว: 95.50 km/h"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/iconAlert"
            app:layout_constraintTop_toBottomOf="@id/textCarId"
            app:layout_constraintEnd_toStartOf="@id/textTime"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/textTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00:30"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>